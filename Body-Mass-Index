# include <iostream> 
#include<cmath>
using namespace std; 
int main() 
 {
 cout<<"Enter your weight in pounds"<<endl;
 double weight;//for holding weight
 cin>>weight;// inputting weight
 cout<<"Enter your height in inches"<<endl;
 double height;//for holding height
 cin>>height;//inputting height
 double BMI;//for holding body mass index value
  BMI=(weight*703)/pow(height,2);//calculating body-mass-index
 //checking the person's weight on the bases of his body-mass-index
 if(BMI>=18.5&&BMI<=25)
 {
 cout<<"You weight is optimal"<<endl;
 }
 else if(BMI>25)
{
 cout<<"You are over-weighted"<<endl;
 }
 else 
 {
 cout<<"You are under-weighted"<<endl;
 }
 return 0;
 }