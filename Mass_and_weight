#include<iostream>
using namespace std;
int main()
{
    //variable declaration
    double mass;//for holding mass of an object
    double weight;//for holding weight of an object
    cout<<"Enter the mass of an object"<<endl;
    cin>>mass;
    weight=mass*9.8;
    cout<<"The weight of the object is: "<<weight<<endl;
     if (weight>1000) {
        cout<<"The object is too heavy "<<endl;
     }
else if(weight<10){
    cout<<"The object is too light"<<endl;
}
return 0;
}
