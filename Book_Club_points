#include<iostream>
using namespace std;
int main()
{
int purchase,points;
cout<<"Enter the number of books you purchased this month"<<endl;
cin>>purchase;
if(purchase==0){
 points=0  ; 
}    
    else if(purchase==1){
 points=5;   
}
        else if(purchase==2){
 points=15;   
}
           else if(purchase==3){
 points=30;   
}
              else if(purchase>=4){
 points=60;   
}
                    else{
 cout<<"Make sure that number of books purchased is greater than 0"<<endl;   
}
cout<<"You earn "<<points<< " points"<<endl;
return 0;
}